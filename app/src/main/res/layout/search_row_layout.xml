<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTripsearch"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp">

        <ImageView
            android:id="@+id/imgTripFlagSearch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|end"
            android:translationX="-40dp"
            android:translationY="-5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TableLayout
            android:id="@+id/tblTripsearch"
            android:layout_width="280dp"
            android:layout_height="155dp"
            android:padding="5sp">

            <TableRow
                android:layout_width="304dp"
                android:layout_height="120sp">

                <TextView
                    android:id="@+id/label_tripNamesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="12dp"
                    android:text="@string/trip_name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripNamesearch"
                    android:layout_width="187dp"
                    android:layout_height="50sp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="1dp"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/label_tripDatesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="12dp"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripDatesearch"
                    android:layout_width="20dp"
                    android:layout_height="40sp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="1dp"
                    android:textColor="@color/teal_700" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/label_tripDestinationsearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="12dp"
                    android:text="@string/destination"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripDestinationsearch"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="1dp"
                    android:textColor="@color/teal_700" />
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>