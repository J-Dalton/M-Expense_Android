<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lo_linear"
    android:layout_width="match_parent"
    android:layout_height="170sp"
    android:orientation="vertical"
    tools:context=".ViewExpenseActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp">

        <TableLayout
            android:layout_width="256dp"
            android:layout_height="162dp">

            <TableRow android:layout_height="80sp">

                <TextView
                    android:id="@+id/label_exType"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:text="@string/ex_type"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvExType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow android:layout_height="80sp">

                <TextView
                    android:id="@+id/label_exAmount"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:text="@string/ex_amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvExAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:shadowDx="10"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow android:layout_height="80sp">

                <TextView
                    android:id="@+id/label_exTime"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:text="@string/ex_time"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvExTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow android:layout_height="80sp">

                <TextView
                    android:id="@+id/label_exComments"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:text="@string/ex_comments"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvExComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black" />

            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/imgExpenseIcon"
            android:layout_width="155dp"
            android:layout_height="103dp"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>